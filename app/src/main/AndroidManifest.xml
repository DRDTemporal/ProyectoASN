<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.proyecto.asn.proyectoasn">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controllers.DetalleAlumnoActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".controllers.DetalleCursoActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".controllers.CursosActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".controllers.InteraccionActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".controllers.CalficarVideoActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".controllers.VideoActivity"
            android:configChanges="screenSize|orientation|keyboardHidden"
            android:screenOrientation="landscape"/>
        <activity android:name=".controllers.RegistroActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".controllers.MenuActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".controllers.LoginActivity"
            android:screenOrientation="landscape"/>
        <activity android:name=".controllers.MainActivity"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>